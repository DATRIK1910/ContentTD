<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        .sidebar {
            transition: all 0.3s ease;
        }

        .sidebar:hover {
            background-color: #2d3748;
        }

        .table-container {
            max-height: 600px;
            overflow-y: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th,
        td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #4a5568;
        }

        th {
            background-color: #4a5568;
            color: white;
            position: sticky;
            top: 0;
            z-index: 10;
        }

        tr:hover {
            background-color: #2d3748;
        }

        .confirm-btn {
            transition: all 0.3s ease;
            background-color: #10b981;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-left: 5px;
        }

        .confirm-btn:hover {
            background-color: #059669;
        }

        .loading {
            opacity: 0.6;
            pointer-events: none;
        }
    </style>
</head>

<body class="bg-gray-900 text-gray-100">
    <!-- Sidebar -->
    <div class="flex min-h-screen">
        <div class="sidebar bg-gray-800 w-64 p-6 flex flex-col justify-between">
            <div>
                <h2 class="text-2xl font-bold text-white mb-8">Admin Panel</h2>
                <nav>
                    <a href="/admin"
                        class="flex items-center py-3 px-4 text-gray-300 hover:bg-gray-700 hover:text-white rounded-lg mb-2">
                        <i class="fas fa-tachometer-alt mr-3"></i> Dashboard
                    </a>
                    <a href="/admin/users"
                        class="flex items-center py-3 px-4 text-gray-300 hover:bg-gray-700 hover:text-white rounded-lg mb-2">
                        <i class="fas fa-users mr-3"></i> Quản lý Người dùng
                    </a>
                    <a href="/admin/contacts"
                        class="flex items-center py-3 px-4 text-gray-300 hover:bg-gray-700 hover:text-white rounded-lg mb-2">
                        <i class="fas fa-address-book mr-3"></i> Quản lý Liên hệ
                    </a>
                    <a href="/admin/content-manager"
                        class="flex items-center py-3 px-4 text-gray-300 hover:bg-gray-700 hover:text-white rounded-lg mb-2">
                        <i class="fas fa-file-alt mr-3"></i> Quản lý Content
                    </a>
                    <a href="/admin/history"
                        class="flex items-center py-3 px-4 text-gray-300 hover:bg-gray-700 hover:text-white rounded-lg mb-2">
                        <i class="fas fa-history mr-3"></i> Lịch sử hoạt động người dùng
                    </a>
                    <a href="/admin/pending-content"
                        class="flex items-center py-3 px-4 text-gray-300 hover:bg-gray-700 hover:text-white rounded-lg mb-2">
                        <i class="fas fa-check-circle mr-3"></i> Xét duyệt nội dung
                    </a>
                    <a href="/admin/ratings"
                        class="flex items-center py-3 px-4 text-gray-300 hover:bg-gray-700 hover:text-white rounded-lg mb-2">
                        <i class="fas fa-star mr-3"></i> Khảo sát độ hài lòng website
                    </a>
                    <a href="/admin/revenue"
                        class="flex items-center py-3 px-4 text-gray-300 hover:bg-gray-700 hover:text-white rounded-lg mb-2">
                        <i class="fas fa-money-bill-wave mr-3"></i> Quản lý Doanh thu
                    </a>
                    <a href="/admin/user-rank"
                        class="flex items-center py-3 px-4 text-gray-300 hover:bg-gray-700 hover:text-white rounded-lg mb-2">
                        <i class="fas fa-trophy mr-3"></i> Thứ bậc Người dùng
                    </a>
                    <a href="/admin/payment-management"
                        class="flex items-center py-3 px-4 text-white bg-indigo-600 rounded-lg mb-2">
                        <i class="fas fa-credit-card mr-3"></i> Quản lý Thanh toán
                    </a>
                </nav>
            </div>
            <div>
                <form action="/logout" method="GET" style="display: inline;">
                    <button type="submit"
                        class="flex items-center py-3 px-4 text-gray-300 hover:bg-gray-700 hover:text-white rounded-lg w-full">
                        <i class="fas fa-sign-out-alt mr-3"></i> Đăng xuất
                    </button>
                </form>
            </div>
        </div>

        <!-- Main Content -->
        <div class="flex-1 flex flex-col">
            <!-- Header -->
            <header class="bg-gray-800 p-4 shadow-lg flex justify-between items-center">
                <h1 class="text-xl font-semibold text-white">
                    <%= title %>
                </h1>
                <div class="flex items-center space-x-4">
                    <span class="text-gray-300">Xin chào, Admin</span>
                    <i class="fas fa-user-circle text-2xl text-gray-300"></i>
                </div>
            </header>

            <!-- Content -->
            <div class="p-6">
                <div class="bg-gray-800 rounded-lg shadow-lg p-6 mb-6">
                    <h2 class="text-2xl font-bold text-white mb-4">Quản lý Thanh toán</h2>
                    <div class="table-container">
                        <table id="transactionsTable">
                            <thead>
                                <tr>
                                    <th>Mã Giao Dịch</th>
                                    <th>Số Tiền (VND)</th>
                                    <th>Số Diamonds</th>
                                    <th>Trạng Thái</th>
                                    <th>Thời Gian</th>
                                    <th>Hành Động</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% transactions.forEach(transaction=> { %>
                                    <tr>
                                        <td>
                                            <%= transaction.transaction_id %>
                                        </td>
                                        <td>
                                            <%= transaction.amount.toLocaleString() %>
                                        </td>
                                        <td>
                                            <%= transaction.diamonds %>
                                        </td>
                                        <td>
                                            <span class="px-2 py-1 text-xs">
                                                <%= transaction.status==='pending' ? 'Chờ kiểm tra' : 'Hoàn thành' %>
                                            </span>
                                        </td>
                                        <td>
                                            <%= new Date(transaction.created_at).toLocaleString('vi-VN') %>
                                        </td>
                                        <% if (transaction.status==='pending' ) { %>
                                            <td>
                                                <form id="confirmForm_<%= transaction.transaction_id %>"
                                                    action="/admin/confirm-transaction" method="POST"
                                                    style="display: inline;"
                                                    onsubmit="return confirmTransaction('<%= transaction.transaction_id %>', event);">
                                                    <input type="hidden" name="transactionId"
                                                        value="<%= transaction.transaction_id %>">
                                                    <button type="submit" class="confirm-btn"
                                                        data-transaction-id="<%= transaction.transaction_id %>">
                                                        <i class="fas fa-check mr-1"></i> Xác nhận
                                                    </button>
                                                </form>
                                            </td>
                                            <% } else { %>
                                                <td>Đã xử lý</td>
                                                <% } %>
                                    </tr>
                                    <% }); %>
                            </tbody>
                        </table>
                    </div>
                    <% if (transactions.length===0) { %>
                        <p class="text-gray-300 mt-4">Không có giao dịch nào đang chờ xử lý.</p>
                        <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function confirmTransaction(transactionId, event) {
            event.preventDefault();

            const $form = $(`#confirmForm_${transactionId}`);
            const $row = $form.closest('tr');
            $row.addClass('loading');

            $.ajax({
                url: '/admin/confirm-transaction',
                type: 'POST',
                data: $form.serialize(),
                success: function (response) {
                    if (response.success) {
                        $row.find('td:nth-child(4) span').removeClass('bg-yellow-100 text-yellow-800')
                            .addClass('bg-green-100 text-green-800')
                            .text('Hoàn thành');
                        $row.find('td:nth-child(6)').text('Đã xử lý');
                        alert('Xác nhận thành công!');
                    } else {
                        alert('Xác nhận thất bại: ' + response.message);
                    }
                },
                error: function (xhr, status, error) {
                    alert('Lỗi: ' + error);
                },
                complete: function () {
                    $row.removeClass('loading');
                }
            });
        }
    </script>
</body>

</html>